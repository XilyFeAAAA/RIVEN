{
    "name": "riven",
    "version": "1.0.00",
    "private": true,
    "main": "electron/main.js",
    "homepage": "./",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:serve": "electron .",
        "electron:build": "vite build && electron-builder --dir"
    },
    "build": {
        "productName": "RIVEN",
        "appId": "RIVEN.app",
        "win": {
            "target": [
                "zip"
            ]
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    },
    "dependencies": {
        "@mdi/font": "^7.2.96",
        "@mdi/js": "^7.2.96",
        "axios": "^1.4.0",
        "echarts": "^5.4.3",
        "element-plus": "^2.3.8",
        "pinia": "^2.1.3",
        "pinia-persistedstate-plugin": "^0.1.0",
        "pinia-plugin-persist": "^1.0.0",
        "pinia-plugin-persistedstate": "^3.1.0",
        "sass": "^1.63.6",
        "v-lazy-image": "^2.1.1",
        "vite-plugin-electron": "^0.12.0",
        "vue": "^3.3.4",
        "vue-router": "^4.2.2"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.2.3",
        "autoprefixer": "^10.4.14",
        "postcss": "^8.4.24",
        "tailwindcss": "^3.3.2",
        "vite": "^4.3.9",
        "electron": "^25.3.2",
        "electron-builder": "^24.6.3"
    }
}
